<%- model_class = SpecialMenu -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize %>
    <%= link_to new_special_menu_path, :class => 'btn btn-success pull-right' do %>
      <i class='icon-plus icon-white'></i> Add Special Menu
    <% end %>
  </h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:hidden) %></th>
      <th>No of pages</th>
      <th>Created on</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @special_menus.each do |special_menu| %>
      <tr>
        <td><%= special_menu.name %></td>
        <td><%= special_menu.hidden ? "Yes" : "No" %></td>
        <td><%= special_menu.menu_images.count %></td>
        <td><%= special_menu.created_at.strftime("%d %B, %Y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_special_menu_path(special_menu), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      special_menu_path(special_menu),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>