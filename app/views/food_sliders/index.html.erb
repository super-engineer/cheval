<%- model_class = SliderImage -%>
<div class="page-header">
  <h1>
    Food & Bar Slider
    <%= link_to new_food_slider_path, :class => 'btn btn-success pull-right' do %>
      <i class='icon-plus icon-white'></i> Add Slider Image
    <% end %>
  </h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:hidden) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @food_sliders.each do |food_slider| %>
      <tr>
        <td><%= image_tag food_slider.image.url(:thumb) %></td>
        <td><%= food_slider.hidden ? "Yes" : "No" %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_food_slider_path(food_slider), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      food_slider_path(food_slider),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>