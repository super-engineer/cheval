<div class="menu_links">
  <ul class="menu">
    <% SpecialMenu.all.each_with_index do |special_menu, i| %>    
      <li class="<%= i == 0 ? 'active' : ''%>"><a href="#specials<%= special_menu.id %>"><%= special_menu.name %></a></li>
    <% end %>
  </ul>
</div>
<% SpecialMenu.order("updated_at DESC").all.each_with_index do |special_menu, i| %>
  <div class="menu_content" id="specials<%= special_menu.id %>">
    <div id="special_menu_slider<%= special_menu.id %>">
      <ul class="bjqs">
        <% special_menu.menu_images.each do |menu_image| %>
          <li><img src="<%= menu_image.image.url(:cropped) %>"></li>
        <% end %>
      </ul>
    </div>
  </div>   
<% end %>
<script type="text/javascript">
  $(function(){
    $(".menu").tabify();
    <% SpecialMenu.all.each do |special_menu| %>
      $("#special_menu_slider<%= special_menu.id %>").bjqs({
        'width' : 510,
        'height' : 700,
        'automatic' : false,
        'animtype' : 'slide'
      });            
    <% end %>
  });
</script>
