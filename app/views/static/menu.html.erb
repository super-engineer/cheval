<div class="menu_links">
  <ul class="menu">
    <li class="active"><a href="#cheval">Bar Menu</a></li>
    <li><a href="#restaurant">Food Menu</a></li>
    <li><a href="#management">Express Menu</a></li>
    <% SpecialMenu.all.each do |special_menu| %>    
      <li><a href="#specials<%= special_menu.id %>"><%= special_menu.name %></a></li>
    <% end %>
  </ul>
</div>
<div class="menu_content" id="cheval">
  <div id="regular_menu_slider">
    <ul class="bjqs">
      <li><img src="/assets/bar1.png"></li>
