<div class="gallery_container">
  <div id="gallery2">
    <ul class="bjqs">
      <% SliderImage.where(hidden: false).each do |slider| %>
        <li><img src="<%= slider.image.url(:cropped) %>"></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="main_content">
  <div class="center_content home_content">
    <div class="grid_3">
      <div class="content_inner">
      <h1><a href="art_club.html">The Chevalier Sessions</a></h1>
      <% unless (event = Event.upcoming.first).nil? %>
        <img src="<%= event.thumbnail_poster.url(:cropped) %>" width="270px" height="270px" class="center_img">
        <h2><a href="<%= show_event_path(event.id) %>"><%= event.name %></a></h2>
        <p><%= truncate(event.description, :length => 120) %></p>
      <% end %>
      </div>
    </div>
    <div class="grid_3">
      <div class="content_inner">
      <h1><a href="menu#cheval-tab">Special Menu</a></h1>
      <% special_menu = SpecialMenu.where("hidden = false").order("created_at DESC").first %>
      <% unless special_menu.nil? %>
        <div class="special-menu-image">
          <img src="<%= special_menu.thumbnail_image.url(:cropped) rescue "" %>" class="center_img">
        </div>
        <h2><a href="menu#specials<%= special_menu.id %>"><%= special_menu.name %></a></h2>
        <p><%= truncate(special_menu.description, :length => 120) %></p>
        </div>
      <% end %>
    </div>
    <div class="grid_3">
      <div class="content_inner">
      <img src="/assets/twitter.png" style="margin-top:35px;" class="center_img">
      <div id="rotator">
        <% Testimony.order("created_at DESC").limit(10).each do |testimony| %>
          <p class="large_content"><%= testimony.content %></p>
        <% end %>
      </div>
      <h1>Media</h1>
        <div class="gallery">
          <% EventPicture.order("created_at DESC").limit(3).each do |event_picture| %>
            <a href="<%= event_picture.image.url%>" target="_blank"><img src="<%= event_picture.image.url(:thumb) %>" width="100"></a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
      $("#gallery2").bjqs({
        'width' : 1200,
        'height' : 400,
        'automatic' : false,
        'animtype' : 'slide',
        'showmarkers' : false
      });
  });

  $(window).load(function() {
    startRotator("#rotator");
  })

  function rotateBanners(elem) {
    var active = $(elem+" p.active");
    var next = active.next();
    if (next.length == 0) 
      next = $(elem+" p:first");
    active.removeClass("active").fadeOut(200, function(){
      next.addClass("active").fadeIn(200);
    });
  };
   
  function prepareRotator(elem) {
    $(elem+" p").fadeOut(0);
    $(elem+" p:first").fadeIn(0).addClass("active");
  };
   
  function startRotator(elem) {
    prepareRotator(elem);
    setInterval("rotateBanners('"+elem+"')", 2500);
  };
</script>
