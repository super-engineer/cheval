<div class="single_event_container">
  <div class="link_content">
    <p class="date"><%= @event.scheduled_on.strftime("#{@event.scheduled_on.day.ordinalize} %b %Y") %></p>
    <h3><%= @event.name %></h3>
    <p><%= @event.description %></p>
    <br>
    <div class="gallery">
      <% @event.event_pictures.each do |event_picture| %>
        <a href="<%= event_picture.image.url%>" target="_blank"><img src="<%= event_picture.image.url(:thumb) %>" width="100"></a>
      <% end %>
    </div>
  </div>
</div>
<div class="menu_content">
    <img src=<%= @event.poster.url %> width="500">
</div>