<div class="main_content press_content">
  <div id="gallery">
    <ul class="bjqs">
      <% FoodSlider.where(:hidden => false).each do |food_slider| %>
        <li><%= image_tag food_slider.image.url(:cropped) %></li>
      <% end %>
    </ul>
  </div>
</div>        

<script type="text/javascript">
  $(function(){
    $("#gallery").bjqs({
      'width' : 1200,
      'height' : 500,
      'automatic' : false,
      'animtype' : 'slide',
      'showmarkers' : false
    });
  });
</script>